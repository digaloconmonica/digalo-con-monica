{
  "name": "digalo-con-monica",
  "version": "3.0.0",
  "main": "main.js",
  "private": true,
  "description": "Juego de F3",
  "author": "F3",
  
  "scripts": {
  "start": "electron .",
  "dist:mac": "electron-builder --mac dmg zip --publish never"
},
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
  "appId": "com.F3.dcm",
  "productName": "DigaloConMonica",
  "asar": true,
  "files": [
    "app/**/*",
    "main.js",
    "package.json",
    "assets/**/*",
    "videos/**/*"
  ],
  "mac": {
    "category": "public.app-category.games",
    "target": [
      { "target": "dmg", "arch": ["arm64","x64"] },
      { "target": "zip", "arch": ["arm64","x64"] }
    ]
  },
  "dmg": {
    "contents": [
      { "x": 130, "y": 220 },                         
      { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
    ]
  }
}

}
